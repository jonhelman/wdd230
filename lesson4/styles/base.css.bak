html{
	font-family: 'Noto Sans', sans-serif;
}


h2 {
	font-family: 'Reem Kufi Ink', sans-serif;
	font-size: 19px;
}

header {
	display: flex;
	color:white;
	background-color: #0D3B66;
	flex-flow: column;
    align-items: center;
    justify-content: center;
    line-height: 10px;
}

.date {
	  font-size: 12px;
}

main {
	text-align: center;
	padding: 1em;
}




nav {
	font-family: 'Reem Kufi Ink', sans-serif;
	display: flex;
	flex-wrap:nowrap;
	flex-flow: column;
	justify-content: space-around;
    align-items: center;
	background-color: #7abfde;
}
	

nav a {
	color: #fce803;
	background-color: #7abfde;
    text-decoration: none;
    font-size: 20px;
	padding: 5px;
	display: block;
}

nav a:hover{ 
background-color: #E39000; 
color:black;
}


footer {
	display: flex;
	color: white;
	background-color: #0D3B66;
	flex-flow: column;
    align-items: center;
    justify-content: center;
	line-height: 10px;
	font-size: 9px;
}


#logo {
width: 60%;
}

#logo-footer {
	width: 40%;
	margin-top: 5px;
}

table, td, th {
  border: 1px solid;
  padding: 1em;
}

table {
  width: 100%;
  border-collapse: collapse;
}

/* Target Audience */

#fili {
width: 100%;
}

#nippon {
width: 100%;
}

#persona-table {
font-size: 10px;
}

